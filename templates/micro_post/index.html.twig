{% extends 'base.html.twig' %}

{% block title %} {{ "Posts" }} !{% endblock %}

{% block body %}
    {% for message in app.flashes('notice') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
    <small class="text-right mt-3">
        <a href="{{ path('micro_post_add') }}">Add New</a>
    </small>
    <h6 class="border-bottom">Recent UPdates </h6>
    {% for post in posts %}
        <a href="{{ path('micro_post_post',{'id':post.id}) }}">
            {{ include('micro_post/post.html.twig' , {'post': post}) }}
        </a>

        <small class="text-right mt-3">
            <a href="{{ path('micro_post_edit',{'id':post.id}) }}">Edit</a>
            <a href="{{ path('micro_post_delete',{'id':post.id}) }}">Delete</a>
        </small>

    {% endfor %}
{% endblock %}
